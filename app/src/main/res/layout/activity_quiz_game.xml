<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizgame_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        android:contentDescription="Quiz Logo"
        android:scaleType="centerCrop"
        android:src="@drawable/quiz" />


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="QUIZ APP"
        android:textColor="#00C853"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_take_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#00C853"
        android:padding="12dp"
        android:text="Take Quiz"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#3b5998"
        android:text="f Login"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_login_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#dd4b39"
        android:drawableStart="@drawable/common_google_signin_btn_icon_dark"
        android:text="g+ Login"
        android:textColor="#FFFFFF" />


</LinearLayout>
